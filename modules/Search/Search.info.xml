<module_info>
  <name>Search</name>
  <version>2.0</version>
  <summary>Finds things for you.</summary>
  <minimum_core_version>1.99</minimum_core_version>
  <authors>
    <author>
      <name>Ted Kulp</name>
      <email>ted@cmsmadesimple.org</email>
    </author>
  </authors>
  <events_watched>
    <module>
      <name>Core</name>
      <events>
        <event>content_add_post</event>
        <event>content_edit_post</event>
        <event>content_delete_post</event>
        <event>uninstall_module</event>
      </events>
    </module>
  </events_watched>
  <events_sent>
    <event>SearchAllItemsDeleted</event>
    <event>SearchInitiated</event>
    <event>SearchCompleted</event>
    <event>SearchItemAdded</event>
    <event>SearchItemDeleted</event>
    <event>SearchReIndex</event>
  </events_sent>
  <admin_interface>true</admin_interface>
  <admin_section>extensions</admin_section>
  <cms_form_project>cmsmadesimple</cms_form_project>
  <plugin_module>true</plugin_module>
  <plugins>
    <plugin>
      <name>search</name>
    </plugin>
  </plugins>
  <wysiwyg>false</wysiwyg>
  <auto_install>true</auto_install>
  <auto_upgrade>true</auto_upgrade>
</module_info>
